<div class="container col-lg-10 text-center mt-4">
    <table class="table table-secondary table-hover table-bordered">
      <tr>
         <th colspan="5">
            <form class="d-flex" action="/controllertoy/search1" method="post">
            <input class="form-control me-1" type="search" placeholder="Search" name="name"> 
            <button class="btn btn-light" type="submit">Search</button>
        </form>
         </th>
         
      </tr>
   <tr>
      <th colspan="4" class="text text-center text-uppercase h1">
        Controller Toy</th>
      <th>
         <a href="/controllertoy/add" class="btn btn-primary">Add</a>
      </th>
   </tr>
   <tr>
      <th>Name</th>
      <th>Brand</th>
      <th>Price</th>
      <th>Image</th>
      <th>Menu</th>
   </tr>
   {{#each controllertoys }}
   <tr>
      <td>{{ name }} </td>
      <td>{{ brand }}</td>
      <td>${{ price }}</td>
      <td>
         <a href="/controllertoy/detail/{{_id}}">
            <img src="{{ image }}" width="100" height="120">
         </a> 
      </td>
      <td>
         <a class="btn btn-warning" href="/controllertoy/edit/{{ _id }}">Edit</a>
         <a class="btn btn-danger" href="/controllertoy/delete/{{ _id}}"
         onclick="return confirm('Are you sure to delete this Controller Toy ?');"
         >Delete</a>
      </td>
   </tr>
   {{/each}}
</table>
</div>

