<form action="/controllertoy/add" method="post" class="container col-md-8 card bg-light mt-3">
   <h1 class="text-danger text-uppercase text-center mt-3">Add new controller toy</h1>
   <div class="form-group mt-3">
      <label for="name" class="text-primary">Name</label>
      <input class="form-control" type="text" name="name" required minlength="3" maxlength="100">
   </div>
   <div class="form-group mt-3">
      <label for="brand" class="text-primary">Brand</label>
      <input class="form-control" type="text" name="brand" id="" required>
   </div>
   <div class="form-group mt-3">
      <label for="price" class="text-primary">Price</label> <br>
      <input class="form-control" type="number" name="price">
   </div>
   <div class="form-group mt-3">
      <label for="quantity" class="text-primary">Quantity</label> <br>
      <input class="form-control" type="number" name="quantity" min="1" max="100">
   </div>
   <div class="form-group mt-3">
      <label for="image" class="text-primary">Image</label>
      <input class="form-control" type="url" name="image" required>
   </div>
   <div class="form-group mt-3 mb-3 text-center">
      <input class="btn btn-primary" type="submit" value="Add">
      <input class="btn btn-success" type="reset" value="Clear">
   </div>
</form>