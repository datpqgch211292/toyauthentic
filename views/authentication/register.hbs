<div class="container col-md-8 mt-3">
    <form action="register" method="post" class="card p-3 bg-light">
        <h1 class="text text-uppercase text-center text-danger">Register</h1>
        <div class="form-group mt-3">
            <label for="" class="h3 text-success">Username</label>
            <input type="text" class="form-control" name="username" required>
        </div>
        <div class="form-group mt-3">
            <label for="" class="h3 text-success">Name</label>
            <input type="text" class="form-control" name="name" required>
        </div>
        <div class="form-group mt-3">
            <label for="" class="h3 text-success">Email</label>
            <input type="text" class="form-control" name="email" required>
        </div>
        <div class="form-group mt-3">
            <label for="" class="h3 text-success">Password</label>
            <input type="password" class="form-control" name="password" required>
        </div>
        <div class="form-group mt-3 text-center">
            <input type="submit" value="Register" class="btn btn-primary">
            <input type="reset" value="Clear" class="btn btn-warning">
        </div>
    </form>
</div>