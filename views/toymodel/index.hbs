<div class="container col-lg-10 text-center mt-4">
   {{!-- <a href="./controllertoy/index">Controller toy</a> --}}

    <table class="table table-secondary table-hover table-bordered">
      <tr>
         <th colspan="5">
            <form class="d-flex" action="/toymodel/search1" method="post">
            <input class="form-control me-1" type="search" placeholder="Search" name="name"> 
            <button class="btn btn-light" type="submit">Search</button>
        </form>
         </th>
         
      </tr>
      <tr>
         <th colspan="4" class="text text-center text-uppercase h1">
            Toy Model</th>
         <th>
            <a href="/toymodel/add" class="btn btn-primary">Add</a>
         </th>
      </tr>
   <tr>
      <th>Name</th>
      <th>Size</th>
      <th>Price</th>
      <th>Image</th>
      <th>Menu</th>
   </tr>
   {{#each toymodels }}
   <tr>
      <td>{{ name }} </td>
      <td>{{ size }}</td>
      <td>{{ price }}</td>
      <td>
         <a href="/toymodel/detail/{{_id}}">
            <img src="{{ image }}" width="100" height="120">
         </a> 
      </td>
      <td>
         <a class="btn btn-warning" href="/toymodel/edit/{{ _id }}">Edit</a>
         <a class="btn btn-danger" href="/toymodel/delete/{{ _id}}"
         onclick="return confirm('Are you sure to delete this toy model ?');"
         >Delete</a>
      </td>
   </tr>
   {{/each}}
</table>
</div>

