
<div class="col-md-4 container mt-3">
    <div class="row">
        <form class="d-flex" action="/toymodel/search" method="post">
            <input class="form-control me-1" type="search" placeholder="Search" name="name"> 
            <button class="btn btn-light" type="submit">Search</button>
        </form>
    </div>
</div>

<div class="container col-md-8 text-center">
    <h2 class="mt-4">TOY MODELS</h2>
    <div class="row">
        {{#each toymodels }}
        <div class="card col-md-4 p-2 mr-1">
            <a href="/toymodel/detail/{{_id}}">
            <img id="toymodel" class="card-img-top" src="{{ image }}" alt="Title">
            </a>
            <div class="card-body mt-3">
                <h6 class="card-text">${{ price }}</h6>
                <h6 style="min-height: 60px;" class="card-title">{{ name }}</h6>
                <button class="btn btn-outline-dark mt-auto mt-2">Add to cart</button>
                <button class="btn btn-outline-dark mt-auto mt-2">Buy</button>
                
            </div>
        </div>
        {{/each}}
    </div>
</div>

